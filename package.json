{
  "name": "claude-plugins",
  "private": true,
  "workspaces": [
    "plugins/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsc --build",
    "typecheck": "tsc --build --noEmit",
    "clean": "rm -rf plugins/*/dist plugins/*/*.tsbuildinfo",
    "sync": "bun scripts/sync.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "lefthook": "^1.10.10",
    "typescript": "^5.7.0",
    "prettier": "^3.4.0"
  }
}
